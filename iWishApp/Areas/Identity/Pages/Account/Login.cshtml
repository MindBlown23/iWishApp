@page

@model LoginModel

@{
    ViewData["Title"] ="POWERFUL AFFIRMATIONS";
}

<style> 
#myDIV {
  width: 400px;
  height: 100px;
  animation: mymove 2s;
  animation-iteration-count: infinite
}
@@keyframes  mymove {
  50%{font: 40px bold;}
}
</style>
<body>
    <div id="myDIV">
        <h1 style="color:rebeccapurple">@ViewData["Title"]</h1>
    </div>
</body>

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
        <section>
            <form  id="account" method="post">
                @*<h2 style="color:yellow";></h2>*@
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                        <div class="form-outline mb-4">
                            <input asp-for="Input.Email"type="email" id="form3Example3" class="form-control form-control-lg"
                                   placeholder="Enter a valid email address" />
                            <label asp-for="Input.Email" style="color:white"class="form-label" for="form3Example3">Email address</label> 
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    @*<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>*@   
                </div>
                    <div class="form-outline mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div style="color:rebeccapurple"class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-sn btn-primary">Log In</button> <button onclick="client.requestCode();"class="w-100 btn btn-lg btn-primary">Log In with Google</button>
                    
                </div>
                <div>
                    <p>
                        <a style="color:rebeccapurple" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a style="color:rebeccapurple" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a style="color:rebeccapurple" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
 </div>
 </section>
  <script src="https://accounts.google.com/gsi/client"</script> 
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

    
